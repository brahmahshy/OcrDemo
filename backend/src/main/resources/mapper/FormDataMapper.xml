<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.formscanner.mapper.FormDataMapper">
    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.example.formscanner.model.FormData">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="id_number" property="idNumber" />
        <result column="phone_number" property="phoneNumber" />
        <result column="address" property="address" />
        <result column="work_unit" property="workUnit" />
        <result column="position" property="position" />
        <result column="remark" property="remark" />
        <result column="image_path" property="imagePath" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
    </resultMap>
    
    <!-- 表名 -->
    <sql id="tableName">form_data</sql>
    
    <!-- 所有列 -->
    <sql id="Base_Column_List">
        id, name, id_number, phone_number, address, work_unit, position, remark, image_path, created_at, updated_at
    </sql>
    
    <!-- 插入数据 -->
    <insert id="insert" parameterType="com.example.formscanner.model.FormData" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO <include refid="tableName" /> (
            name, id_number, phone_number, address, work_unit, position, remark, image_path, created_at, updated_at
        ) VALUES (
            #{name}, #{idNumber}, #{phoneNumber}, #{address}, #{workUnit}, #{position}, #{remark}, #{imagePath}, #{createdAt}, #{updatedAt}
        )
    </insert>
    
    <!-- 更新数据 -->
    <update id="update" parameterType="com.example.formscanner.model.FormData">
        UPDATE <include refid="tableName" />
        SET 
            name = #{name},
            id_number = #{idNumber},
            phone_number = #{phoneNumber},
            address = #{address},
            work_unit = #{workUnit},
            position = #{position},
            remark = #{remark},
            image_path = #{imagePath},
            updated_at = #{updatedAt}
        WHERE id = #{id}
    </update>
    
    <!-- 根据ID删除 -->
    <delete id="deleteById">
        DELETE FROM <include refid="tableName" /> WHERE id = #{id}
    </delete>
    
    <!-- 根据ID查询 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" /> 
        FROM <include refid="tableName" /> 
        WHERE id = #{id}
    </select>
    
    <!-- 查询所有 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" /> 
        FROM <include refid="tableName" />
    </select>
</mapper>